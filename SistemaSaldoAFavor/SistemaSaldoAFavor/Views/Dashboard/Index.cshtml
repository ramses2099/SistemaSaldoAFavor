
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
      var table =  $("#dataTablesSaldo").DataTable({
            "responsive": true,
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "pageLength": 20,
            "ajax": {
                "url": "/Dashboard/LoadData",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "Servicio" },
                { "data": "Recibo" },
                { "data": "Fecha" },
                { "data": "RNC" },
                { "data": "Cliente" },
                { "data": "Usuario" },
                { "data": "TipoPago" },
                { "data": "MontoRecibo" },
                { "data": "MontoAFavor" },
                { "data": "SaldoDisponible" },
                { "data": "Anular" },
                { "data": "Estatus" }
            ]
      });

        // Apply the search
      table.columns().every(function () {
          var that = this;

          $('input', this.footer()).on('keyup change', function () {
              if (that.search() !== this.value) {
                  that
                      .search(this.value)
                      .draw();
              }
          });
      });


    });

</script>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Reporte Saldo a Favor</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Saldo a Favor
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTablesSaldo">
                    <thead>
                        <tr>
                            <th>SERVICIO</th>
                            <th>RECIBO</th>
                            <th>FECHA</th>
                            <th>RNC</th>
                            <th>CLIENTE</th>
                            <th>USUARIO</th>
                            <th>TIPO DE PAGO</th>
                            <th>MONTO RECIBO</th>
                            <th>MONTO A FAVOR</th>
                            <th>MONTO DISPONIBLE</th>
                            <th>ANULAR</th>
                            <th>ESTADO</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <td><input type="text" name="nServicio" value="" placeholder="Buscar" /></td>
                            <td><input type="text" name="nRecibo" value="" placeholder="Buscar" /></td>
                            <td><input type="text" name="nFecha" value="" placeholder="Buscar" /></td>
                            <td><input type="text" name="nRNC" value="" placeholder="Buscar" /></td>
                            <td><input type="text" name="nCliente" value="" placeholder="Buscar" /></td>
                            <td><input type="text" name="nUsuario" value="" placeholder="Buscar" /></td>
                            <td><input type="text" name="nTipo de Pago" value="" placeholder="Buscar" /></td>
                            <td><input type="text" name="nMonto Recibido" value="" placeholder="Buscar" /></td>
                            <td><input type="text" name="nMonto a Favor" value="" placeholder="Buscar" /></td>
                            <td><input type="text" name="nMonto Disponible" value="" placeholder="Buscar" /></td>
                            <td><input type="text" name="nAnular" value="" placeholder="Buscar" /></td>
                            <td><input type="text" name="nEstado" value="" placeholder="Buscar" /></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->

    </div>
    <!-- /.col-lg-12 -->
</div>

